<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="sensor">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/party"
        android:scaleType="centerCrop" />
    <EditText
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@layout/border"
        android:hint="Full name*"
        android:paddingLeft="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"/>
    <EditText
        android:id="@+id/mobile"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@layout/border"
        android:hint="Mobile Number*"
        android:paddingLeft="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@layout/border"
        android:hint="Email Id*"
        android:paddingLeft="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"/>
    <EditText
        android:id="@+id/date"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@layout/border"
        android:hint="B'day date*"
        android:paddingLeft="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="400dp"/>
       <Button
        android:id="@+id/reset"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:background="@layout/border"
        android:onClick="reset"
        android:text="Reset"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="80dp"/>
    <Button
        android:id="@+id/delete"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:background="@layout/border"
        android:onClick="delete_member"
        android:text="Delete member"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="180dp"/>
    <Button
        android:id="@+id/add"
        android:onClick="addmember"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:background="@layout/border"
        android:text="Add member"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="280dp"/>
    <Button
        android:id="@+id/view"
        android:onClick="viewmember"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:background="@layout/border"
        android:text="View member"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="380dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHAKE TO CLEAR DATA"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20dp"
        android:backgroundTint="@android:color/transparent"
        android:background="@layout/border"/>
    <TextView
        android:id="@+id/accelerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20dp"
        android:backgroundTint="@android:color/transparent"
        android:background="@layout/border"/>
    <LinearLayout
    android:layout_width="350dp"
    android:layout_height="100dp"
    android:background="@layout/border"
    android:layout_below="@+id/date"
    android:backgroundTint="@android:color/transparent"
    android:layout_margin="20dp">

    <ListView
        android:background="@android:color/transparent"
        android:id="@+id/branch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#000"
        android:listSelector="@android:color/holo_blue_light"
        android:dividerHeight="1.5dp"/>
</LinearLayout>
</RelativeLayout>